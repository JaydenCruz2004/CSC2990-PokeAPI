<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:padding="20dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/detailSprite"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center"/>

        <TextView android:id="@+id/detailName" android:textSize="26sp"/>
        <TextView android:id="@+id/detailId"/>
        <TextView android:id="@+id/detailWeight"/>
        <TextView android:id="@+id/detailHeight"/>
        <TextView android:id="@+id/detailXP"/>
        <TextView android:id="@+id/detailAbility"/>
        <TextView android:id="@+id/detailMove"/>

    </LinearLayout>
</ScrollView>
